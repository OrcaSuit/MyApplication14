<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kakao.sdk.sample.common.widget.ProfileLayout
        android:id="@+id/com_kakao_user_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buttonMe"
        android:layout_weight="1"
        style="@style/button"
        android:layout_marginRight="4dp"
        android:background="@drawable/selector_button_01"
        android:text="@string/usermgmg_me_button" />

    <Button
        android:id="@+id/logout_button"
        android:layout_weight="1"
        android:layout_marginRight="4dp"
        android:background="@drawable/selector_button_01"
        style="@style/button"
        android:text="@string/com_kakao_logout_button" />

    <Button
        android:id="@+id/token_info_button"
        android:layout_weight="1"
        android:layout_marginRight="4dp"
        android:background="@drawable/selector_button_01"
        style="@style/button"
        android:text="@string/com_kakao_tokeninfo_button"
        android:layout_width="0dp"/>

</LinearLayout>